{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "cargo build",
        "type": "shell",
        "command": "cargo build",
        "args": [],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "label": "cargo run",
        "type": "shell",
        "command": "cargo",
        "args": [
          "run",
          "--verbose", 
          "${workspaceFolder}/examples",
          "--enable-panel"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "cargo release",
        "type": "shell",
        "command": "cargo",
        "args": [
          "run",
          "--verbose", 
          "--release",
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      }
    ]
  }